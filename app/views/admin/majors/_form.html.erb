<!-- app/views/majors/_form.html.erb -->

<% if major.errors.any? %>
  <div style="color: red;">
    <h2><%= pluralize(major.errors.count, "错误") %>阻止了保存：</h2>
    <ul>
      <% major.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: [:admin, @major], local: true do |f| %>
  <div>
    <%= f.label :major_name, "专业名称" %><br>
    <%= f.text_field :major_name %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
